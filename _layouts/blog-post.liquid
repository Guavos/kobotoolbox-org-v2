{% include template-start.liquid %}

{% include page-header.liquid %}

<main role="main">
    <section class="section section-text-page">
        <div class="container">
            <h2 class="post-title">{{ page.title }}</h2>
            <time datetime="{{ page.date }}" class="post-date">{{ page.date | date_to_string }}</time>
            {% if page.author %}
                <h5 class="post-author">By {{ page.author }}</h5>
            {% endif %}

            <section class="post-content">
                {{ content }}
            </section>

            <nav class="post-related">
                {% if page.previous %}
                    <a class="post-related__link post-related__link--previous" href="{{ site.baseurl }}{{ page.previous.url }}">&larr;&nbsp;{{ page.previous.title }}</a>
                {% endif %}
                {% if page.next %}
                    <a class="post-related__link post-related__link--next" href="{{ site.baseurl }}{{ page.next.url }}">{{ page.next.title }}&nbsp;&rarr;</a>
                {% endif %}
            </nav>
        </div>
    </section>
</main>

{% include page-footer.liquid %}

{% include template-end.liquid %}
