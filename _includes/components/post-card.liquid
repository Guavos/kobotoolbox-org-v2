{% comment %} 
A small post card with links to full post.

@param post
{% endcomment%}
<article class="post-card">
  <a
    class="post-card__thumbnail" 
    href="{{site.baseurl}}{{include.post.url}}"
  >
    {% include components/thumbnail.liquid image_url=include.post.thumbnail %}
  </a>

  <h3 class="post-card__title">
    <a href="{{site.baseurl}}{{include.post.url}}">
      {{include.post.title}}
    </a>
  </h3>

  <footer class="post-card__link">
    {% capture post_url_full %}{{site.baseurl}}{{include.post.url}}{% endcapture %}
    {% include components/button.liquid
      size="m"
      type="bare"
      color="storm"
      label="Read the article &rarr;"
      url=post_url_full
    %}
  </footer>
</article>
